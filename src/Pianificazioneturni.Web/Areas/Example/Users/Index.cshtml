                                                    @if (dip.RichiedeVariazione) { <img src="~/images/variazione.png" alt="Richiede variazione" title="Richiede variazione" style="width: 16px; height: 16px; vertical-align: middle;" /> }
                                                    <span>@dip.NomeCompleto</span>
