@model Pianificazioneturni.Web.Areas.Example.Users.DipendenteDetailViewModel

<div class="modal-title">Dettaglio Dipendente</div>

<form asp-action="SalvaDipendente" method="post" id="formDettaglio" onsubmit="return validaForm()">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Nome" readonly style="background-color: #e9ecef;" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Ruolo" class="form-label"></label>
        <select class="form-select" asp-for="Ruolo" id="selectRuolo">
            <option value="">-- Seleziona --</option>
            @foreach (var ruolo in (List<string>)ViewBag.Ruoli)
            {
                <option value="@ruolo">@ruolo</option>
            }
        </select>
    </div>

    <div class="form-group mb-3" id="patenteGroup">
        <label class="form-label">Patente:</label>
        <div class="patente-container d-flex align-items-center gap-2">
            <input type="checkbox" asp-for="Patente" id="checkPatente" class="form-check-input" style="width: 20px; height: 20px;" />
            <span>Richiesta</span>
        </div>
    </div>

    <div class="form-group mb-3" id="scadenzaGroup">
        <label asp-for="Scadenza" class="form-label"></label>
        <input type="date" class="form-control" asp-for="Scadenza" id="inputScadenza"
               value="@(Model.Scadenza.HasValue ? Model.Scadenza.Value.ToString("yyyy-MM-dd") : "")" />
    </div>

    <div class="modal-footer d-flex justify-content-center gap-2 mt-4">
        <button type="submit" class="btn btn-success">Salva</button>
    </div>
</form>
