@model Pianificazioneturni.Web.Areas.Example.Users.GestioneDipendentiViewModel
@{
    ViewData["Title"] = "Pianificazione Turni";
}

@section pageTitle {
    <div class="page-title position-absolute start-50 translate-middle">
        @ViewData["Title"]
    </div>
}

@section styles {
    <link rel="stylesheet" href="~/css/gestione-dipendenti.css" />
}

@section navbar {
    <nav class="navbar navbar-expand-lg justify-content-md-center mb-4" style="background-color: #E3F2FD;">
        <div class="container-fluid">
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav gap-5 mx-auto">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action(MVC.Example.Users.Index())">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action(MVC.Example.Users.GestioneNavi())">Gestione Navi</a></li>
                    <li class="nav-item"><a class="nav-link active fw-bold" href="@Url.Action(MVC.Example.Users.GestioneDipendenti())">Gestione Dipendenti</a></li>
                </ul>
            </div>
        </div>
    </nav>
}

<div id="appDipendenti">
<div class="container">
    <div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Storico Dipendenti</h4>
        @if (Model.FiltroPatentiScadute)
        {
            <a href="@Url.Action(MVC.Example.Users.GestioneDipendenti(false))" class="btn btn-secondary btn-sm btn-filter active">
                Patenti Scadute
            </a>
        }
        else
        {
            <a href="@Url.Action(MVC.Example.Users.GestioneDipendenti(true))" class="btn btn-secondary btn-sm btn-filter">
                Patenti Scadute
            </a>
        }
    </div>

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Dipendente</th>
                <th>Ruolo</th>
                <th>Scadenza</th>
            </tr>
        </thead>
        <tbody>
            @{
                var oggi = DateTime.Today;
            }
            @foreach (var dip in Model.GetDipendentiFiltrati())
            {
                var scaduta = dip.RichiedePatente && dip.Patente && dip.Scadenza.HasValue && dip.Scadenza.Value.Date < oggi;
                <tr class="dipendente-row @(scaduta ? "patente-scaduta" : "")" onclick="apriModal(@dip.Id)">
                    <td>@dip.Nome</td>
                    <td>@(string.IsNullOrEmpty(dip.Ruolo) ? "-" : dip.Ruolo)</td>
                    <td>
                        @if (dip.RichiedePatente && dip.Patente && dip.Scadenza.HasValue)
                        {
                            @dip.ScadenzaFormattata
                            if (scaduta)
                            {
                                <img src="~/images/patente.png" alt="Patente scaduta" title="Patente scaduta" style="width: 20px; height: 20px; vertical-align: middle; margin-left: 8px;" />
                            }
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- modal dettaglio dipendente-->
    <div v-if="modalVisible" class="modal-overlay" v-on:click="chiudiModalOverlay($event)">
        <div class="modal-box" v-html="modalContent">
        </div>
    </div>
    </div>
</div>
</div>

@section scripts {
    <script>
    if (typeof Vue === 'undefined') {
        console.error('Vue.js non è caricato!');
    } else {
        const { createApp } = Vue;

        const appDipendenti = createApp({
        data() {
            return {
                modalVisible: false,
                modalContent: ''
            };
        },
        methods: {
            async apriModal(id) {
                const response = await fetch(`@Url.Action("DettaglioDipendente", "Users", new { Area = "Example" })?id=${id}`);
                this.modalContent = await response.text();
                this.modalVisible = true;
                this.$nextTick(() => {
                    this.inizializzaCampiModal();
                });
            },
            chiudiModal() {
                this.modalVisible = false;
            },
            chiudiModalOverlay(event) {
                if (event.target.classList.contains('modal-overlay')) {
                    this.chiudiModal();
                }
            },
            richiedePatente(ruolo) {
                return ruolo === 'Gruista' || ruolo === 'Mulettista';
            },
            inizializzaCampiModal() {
                const selectRuolo = document.getElementById('selectRuolo');
                const inputScadenza = document.getElementById('inputScadenza');
                const scadenzaGroup = document.getElementById('scadenzaGroup');

                if (!selectRuolo) return;

                const aggiornaCampi = () => {
                    const ruolo = selectRuolo.value;
                    const richiedePatente = this.richiedePatente(ruolo);

                    if (richiedePatente) {
                        // Campo modificabile per Gruista e Mulettista
                        inputScadenza.disabled = false;
                        inputScadenza.style.backgroundColor = 'white';
                        inputScadenza.style.cursor = 'text';
                    } else {
                        // Campo non modificabile per altri ruoli
                        inputScadenza.disabled = true;
                        inputScadenza.style.backgroundColor = '#f8f9fa';
                        inputScadenza.style.cursor = 'not-allowed';
                        inputScadenza.value = '';
                    }
                };

                selectRuolo.onchange = aggiornaCampi;
                aggiornaCampi();
            },
            validaForm() {
                const selectRuolo = document.getElementById('selectRuolo');
                const inputScadenza = document.getElementById('inputScadenza');
                const ruolo = selectRuolo.value;

                if (this.richiedePatente(ruolo)) {
                    if (!inputScadenza.value) {
                        alert('Per Gruisti e Mulettisti la scadenza patente è obbligatoria');
                        return false;
                    }
                }
                return true;
            }
        }
        });

        //monta Vue quando il DOM è pronto
        let appDipendentiInstance = null;

        //Funzione per montare Vue
        function mountVue() {
            const appElement = document.getElementById('appDipendenti');
            if (appElement && !appDipendentiInstance) {
                appDipendentiInstance = appDipendenti.mount('#appDipendenti');
                console.log('Vue Dipendenti montato con successo!');
            }
        }

        //aspetta sempre il DOMContentLoaded per sicurezza
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', mountVue);
        } else {
            setTimeout(mountVue, 0);
        }

        //Espone funzioni globali per compatibilità con onclick nell' HTML
        window.apriModal = (id) => {
            if (!appDipendentiInstance) mountVue();
            if (appDipendentiInstance) appDipendentiInstance.apriModal(id);
        };
        window.chiudiModal = () => {
            if (appDipendentiInstance) appDipendentiInstance.chiudiModal();
        };
        window.validaForm = () => {
            if (!appDipendentiInstance) mountVue();
            if (appDipendentiInstance) return appDipendentiInstance.validaForm();
            return true;
        };
    }
    </script>
}
