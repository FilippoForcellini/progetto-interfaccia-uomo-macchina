@model Pianificazioneturni.Web.Areas.Example.Users.GestioneDipendentiViewModel
@{
    ViewData["Title"] = "Pianificazione Turni";
}

@section pageTitle {
    <div class="page-title position-absolute start-50 translate-middle">
        @ViewData["Title"]
    </div>
}

@section styles {
    <link rel="stylesheet" href="~/css/gestione-dipendenti.css" />
}

@section navbar {
    <nav class="navbar navbar-expand-lg justify-content-md-center mb-4"
         style="background-color: #E3F2FD;"
         aria-label="Navigazione principale"
         id="navbar">
        <div class="container-fluid">
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav gap-5 mx-auto">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action(MVC.Example.Users.Index())">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action(MVC.Example.Users.GestioneNavi())">Gestione Navi</a></li>
                    <li class="nav-item"><a class="nav-link active fw-bold" href="@Url.Action(MVC.Example.Users.GestioneDipendenti())" aria-current="page">Gestione Dipendenti</a></li>
                </ul>
            </div>
        </div>
    </nav>
}

<div id="appDipendenti">
<main id="main-content" role="main">
<div class="container">
    <div class="table-container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Storico Dipendenti</h4>
        @if (Model.FiltroPatentiScadute)
        {
            <a href="@Url.Action(MVC.Example.Users.GestioneDipendenti(false))"
               class="btn btn-secondary btn-sm btn-filter active"
               aria-pressed="true"
               aria-label="Filtro patenti scadute attivo. Clicca per disattivare">
                Patenti Scadute
            </a>
        }
        else
        {
            <a href="@Url.Action(MVC.Example.Users.GestioneDipendenti(true))"
               class="btn btn-secondary btn-sm btn-filter"
               aria-pressed="false"
               aria-label="Filtro patenti scadute non attivo. Clicca per attivare">
                Patenti Scadute
            </a>
        }
    </div>

    <table class="table table-bordered" role="table" aria-label="Elenco dipendenti">
        <caption class="visually-hidden">Elenco completo dipendenti con informazioni su ruolo e scadenza patente. Clicca su una riga per modificare i dettagli del dipendente.</caption>
        <thead class="table-light">
            <tr>
                <th scope="col">Dipendente</th>
                <th scope="col">Ruolo</th>
                <th scope="col">Scadenza</th>
            </tr>
        </thead>
        <tbody>
            @{
                var oggi = DateTime.Today;
            }
            @foreach (var dip in Model.GetDipendentiFiltrati())
            {
                var scaduta = dip.RichiedePatente && dip.Patente && dip.Scadenza.HasValue && dip.Scadenza.Value.Date < oggi;
                var ruoloDisplay = string.IsNullOrEmpty(dip.Ruolo) ? "Nessun ruolo" : dip.Ruolo;
                var ariaLabel = $"{dip.Nome}, {ruoloDisplay}" + (scaduta ? ", patente scaduta" : "") + ". Clicca per modificare dettagli.";
                <tr class="dipendente-row @(scaduta ? "patente-scaduta" : "")"
                    onclick="apriModal(@dip.Id)"
                    onkeydown="if(event.key==='Enter' || event.key===' '){event.preventDefault(); apriModal(@dip.Id);}"
                    tabindex="0"
                    role="button"
                    aria-label="@ariaLabel">
                    <th scope="row">@dip.Nome</th>
                    <td>@(string.IsNullOrEmpty(dip.Ruolo) ? "-" : dip.Ruolo)</td>
                    <td>
                        @if (dip.RichiedePatente && dip.Patente && dip.Scadenza.HasValue)
                        {
                            @dip.ScadenzaFormattata
                            if (scaduta)
                            {
                                <img src="~/images/patente.png" alt="" aria-hidden="true" role="presentation" style="width: 20px; height: 20px; vertical-align: middle; margin-left: 8px;" />
                            }
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- modal dettaglio dipendente-->
    <div v-if="modalVisible"
         class="modal-overlay"
         role="dialog"
         aria-modal="true"
         aria-labelledby="modal-dipendente-title"
         v-on:click="chiudiModalOverlay($event)">
        <div class="modal-box" v-html="modalContent">
        </div>
    </div>
    </div>
</div>
</main>
</div>

@section scripts {
    <script>
    if (typeof Vue === 'undefined') {
        console.error('Vue.js non è caricato!');
    } else {
        const { createApp } = Vue;

        const appDipendenti = createApp({
        data() {
            return {
                modalVisible: false,
                modalContent: '',
                previousFocusElement: null
            };
        },
        mounted() {
            // Gestione tasto ESC per chiudere modal
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' || e.key === 'Esc') {
                    if (this.modalVisible) {
                        this.chiudiModal();
                    }
                }
            });
        },
        methods: {
            async apriModal(id) {
                // Salva focus corrente
                this.previousFocusElement = document.activeElement;

                const response = await fetch(`@Url.Action("DettaglioDipendente", "Users", new { Area = "Example" })?id=${id}`);
                this.modalContent = await response.text();
                this.modalVisible = true;
                this.$nextTick(() => {
                    this.inizializzaCampiModal();
                    //sposta focus sul modal.
                    const modalTitle = document.querySelector('.modal-title');
                    if (modalTitle) {
                        modalTitle.setAttribute('tabindex', '-1');
                        modalTitle.setAttribute('id', 'modal-dipendente-title');
                        modalTitle.focus();
                    }
                });
            },
            chiudiModal() {
                this.modalVisible = false;
                // ripristina focus
                this.$nextTick(() => {
                    if (this.previousFocusElement && this.previousFocusElement.focus) {
                        this.previousFocusElement.focus();
                    }
                });
            },
            chiudiModalOverlay(event) {
                if (event.target.classList.contains('modal-overlay')) {
                    this.chiudiModal();
                }
            },
            richiedePatente(ruolo) {
                return ruolo === 'Gruista' || ruolo === 'Mulettista';
            },
            inizializzaCampiModal() {
                const selectRuolo = document.getElementById('selectRuolo');
                const inputScadenza = document.getElementById('inputScadenza');
                const scadenzaGroup = document.getElementById('scadenzaGroup');

                if (!selectRuolo) return;

                const aggiornaCampi = () => {
                    const ruolo = selectRuolo.value;
                    const richiedePatente = this.richiedePatente(ruolo);

                    if (richiedePatente) {
                        // campo modificabile per gruista e mulettista
                        inputScadenza.disabled = false;
                        inputScadenza.style.backgroundColor = 'white';
                        inputScadenza.style.cursor = 'text';
                    } else {
                        //Campo non modificabile per gli altri ruoli
                        inputScadenza.disabled = true;
                        inputScadenza.style.backgroundColor = '#f8f9fa';
                        inputScadenza.style.cursor = 'not-allowed';
                        inputScadenza.value = '';
                    }
                };

                selectRuolo.onchange = aggiornaCampi;
                aggiornaCampi();
            },
            validaForm() {
                const selectRuolo = document.getElementById('selectRuolo');
                const inputScadenza = document.getElementById('inputScadenza');
                const ruolo = selectRuolo.value;

                if (this.richiedePatente(ruolo)) {
                    if (!inputScadenza.value) {
                        alert('Per Gruisti e Mulettisti la scadenza patente è obbligatoria');
                        return false;
                    }
                }
                return true;
            }
        }
        });

        //monta Vue quando il DOM è pronto
        let appDipendentiInstance = null;

        //Funzione per montare Vue
        function mountVue() {
            const appElement = document.getElementById('appDipendenti');
            if (appElement && !appDipendentiInstance) {
                appDipendentiInstance = appDipendenti.mount('#appDipendenti');
                console.log('Vue Dipendenti montato con successo!');
            }
        }

        //aspetta sempre il DOMContentLoaded per sicurezza
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', mountVue);
        } else {
            setTimeout(mountVue, 0);
        }

        //Espone funzioni globali per compatibilità con onclick nell' HTML
        window.apriModal = (id) => {
            if (!appDipendentiInstance) mountVue();
            if (appDipendentiInstance) appDipendentiInstance.apriModal(id);
        };
        window.chiudiModal = () => {
            if (appDipendentiInstance) appDipendentiInstance.chiudiModal();
        };
        window.validaForm = () => {
            if (!appDipendentiInstance) mountVue();
            if (appDipendentiInstance) return appDipendentiInstance.validaForm();
            return true;
        };
    }
    </script>
}
