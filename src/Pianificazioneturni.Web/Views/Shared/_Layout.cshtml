@inject IHtmlLocalizer<Pianificazioneturni.Web.SharedResource> SharedLocalizer
@inject Microsoft.Extensions.Options.IOptions<AppSettings> appSettings
@{
    Layout = "_LayoutHtml";
    var version = System.Reflection.Assembly.GetAssembly(typeof(Startup)).GetName().Version;
}
@section metas{
    @RenderSection("metas", false)
}
@section styles{
    <link rel="stylesheet" href="~/css/home.css" />
    @RenderSection("styles", false)
}

<div id="pageId" class="onit-page">
    <div class="onit-page-sticky-top" id="onit-page-sticky-top">
        <nav class="navbar navbar-expand-lg navbar-dark onit-page-menu" aria-label="Navigazione superiore">
            <div class="container-fluid position-relative">
                <a class="navbar-brand" href="/" aria-label="Vai alla home">
                    <img class="onit-suites-logo" src="~/images/Logo.png" width="90" alt="Logo applicazione"/>
                </a>
                    <ul class="nav navbar-nav ms-auto onit-page-menu-user">
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Menu utente">
                                <img class="user-profile-picture" src="~/images/admin-logo.png" width="30" alt="Avatar utente"/>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end" role="menu">
                                    <a class="dropdown-item" href="javascript:void(0)" onclick="javascript: document.getElementById('POST_LogOut').submit()" title="@SharedLocalizer["Chiudi sessione di lavoro"]" role="menuitem">
                                        <i class="fa-solid fa-right-from-bracket" aria-hidden="true"></i>&nbsp;@SharedLocalizer["Esci"]
                                    </a>
                                    <form autocomplete="off" method="post" action="@Url.Action(MVC.Login.Logout())" id="POST_LogOut" display="none"></form>
                                </div>
                            </li>
                    </ul>

            </div>
        </nav>
        @RenderSection("pageTitle", false)
    </div>
    @RenderSection("navbar", false)
    @RenderBody()
</div>
